<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:layout_gravity="top">

    <android.support.v7.widget.RecyclerView android:id="@+id/color_grid"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
        app:layoutManager="android.support.v7.widget.GridLayoutManager" app:spanCount="14" tools:itemCount="266"
        tools:listitem="@layout/layout_listitem_color" />

    <LinearLayout android:orientation="horizontal" android:layout_marginTop="8dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:id="@+id/preview_color_text"
            android:layout_width="100dp" android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:gravity="center" android:background="@color/teal_900"
            android:textSize="?attr/text_size_small"
            android:text="@string/configLabel_themeColorText" />

        <View android:id="@+id/preview_color"
            android:layout_width="0dp" android:layout_height="match_parent"  android:layout_weight="1"
            android:background="@color/teal_500" />

        <!--<LinearLayout android:id="@+id/preview_color_under"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:background="@color/teal_700">

            <TextView android:id="@+id/preview_color_text"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center" android:layout_margin="8dp"
                android:textSize="?attr/text_size_small"
                android:text="@string/configAction_colors" />

        </LinearLayout>-->

    </LinearLayout>



</LinearLayout>