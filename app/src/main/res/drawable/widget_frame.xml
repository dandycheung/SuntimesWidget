
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/white" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    <item android:width="16dp" android:height="16dp"
        android:left="-8dp" android:gravity="center_vertical">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:width="16dp" android:height="16dp"
        android:right="-8dp" android:gravity="center_vertical|right">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:width="16dp" android:height="16dp"
        android:top="-8dp" android:gravity="top|center_horizontal">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:width="16dp" android:height="16dp"
        android:bottom="-8dp" android:gravity="bottom|center_horizontal">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>

